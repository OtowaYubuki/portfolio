<div id="counseling_search_window">
  <h3>カウンセリングを探す</h3>
  <%= search_form_for @q, url: search_counselings_path do |f| %>
    <%= f.label :name_or_content_cont, 'キーワード' %>
    <%= f.search_field :name_or_content_cont %>
    <%= f.label :day_gteq, '日付から探す' %>
    <%= f.date_field :day_gteq %>
    ~
    <%= f.date_field :day_lteq_end_of_day %>
    <%= f.label :starttime_cont, '開始時間から探す' %>
    <%= f.check_box :starttime_cont_any, { multiple: true }, '' %>指定しない
