
<%= sort_link(@q, :reviews_comment, "レビュー件数が多い順", default_order: :desc, hide_indicator: true) %>
<%= sort_link(@q, :created_at, "登録日が新しい順", default_order: :desc, hide_indicator: true) %>
<div id="influencer_index">
  <h2 class="index_searchforinfluencer">インフルエンサーを探す</h2>
  <table class="influencers">
    <tr>
      <% @influencers.each do |influencer| %>
        <th><div class="border6"><%= image_tag influencer.influencer_image, size:'100x90', class: "influencer_image" %></div></th>
      <% end %>    
    </tr>
    <tr>
      <% @influencers.each do |influencer| %>
        <td><div class="name"><%= influencer.name %></div></td>
      <% end %>    
    </tr>
    <tr>
      <% @influencers.each do |influencer| %>
        <td><div class="star"><span class="star-rating">
            <span class="star-rating-front" style="width: <%= influencer.avg_score * 20 %>%">★★★★★</span>
            <span class="star-rating-back">★★★★★</span>
            </span>
            （<%= influencer.reviews.count %>）
        </div></td>
      <% end %>
    </tr>
    <tr>
      <% @influencers.each do |influencer| %>
        <td><div class="influencer_show_link"><%= link_to "詳細", influencer_path(influencer) %></div></td>
      <% end %>    
    </tr>
  </table>
</div>

<div id="influencer_search_window">
  <h3>インフルエンサー検索</h3>
  <%= search_form_for @q, url: search_influencers_path do |f| %>
    <%= f.label :name_or_profile_cont, 'キーワード' %>
    <%= f.search_field :name_or_profile_cont %>
    <p>インフルエンサーの得意ジャンルから探す</p>
    <%= link_to "トレンドメイク", search_influencers_path(q: { genre_eq: 'トレンドメイク' }), class:"link" %>
    <%= link_to "モテメイク", search_influencers_path(q: { genre_cont: 'モテメイク' }), class:"link" %>
    <%= link_to "プチプラメイク", search_influencers_path(q: { genre_cont: 'プチプラメイク' }), class:"link" %>
    <%= link_to "デパコスメイク", search_influencers_path(q: { genre_cont: 'デパコスメイク' }), class:"link" %>
    <%= link_to "海外メイク", search_influencers_path(q: { genre_cont: '海外メイク' }), class:"link" %>
    <%= link_to "ナチュラルメイク", search_influencers_path(q: { genre_cont: 'ナチュラルメイク' }), class:"link" %>
    <%= link_to "垢抜けメイク", search_influencers_path(q: { genre_cont: '垢抜けメイク' }), class:"link" %>
    <%= link_to "整形メイク", search_influencers_path(q: { genre_cont: '整形メイク' }), class:"link" %>
    <%= link_to "イベントメイク", search_influencers_path(q: { genre_cont: 'イベントメイク' }), class:"link" %>
    <%= link_to "パーソナルカラー診断", search_influencers_path(q: { genre_cont: 'パーソナルカラー診断' }), class:"link" %>
    <%= link_to "韓国メイク", search_influencers_path(q: { genre_cont: '韓国メイク' }), class:"link" %>
    <br>
    <%= f.submit '検索' %>
  <% end %>
</div>
<div class="paginate">
  <%= paginate @influencers %>
</div>
