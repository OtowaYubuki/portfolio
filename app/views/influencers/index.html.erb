    <%= f.check_box :genre_cont_any, { multiple: true }, '海外メイク' %>海外メイク
    <%= f.check_box :genre_cont_any, { multiple: true }, 'ナチュラルメイク' %>ナチュラルメイク
    <%= f.check_box :genre_cont_any, { multiple: true }, '垢抜けメイク' %>垢抜けメイク
    <%= f.check_box :genre_cont_any, { multiple: true }, '整形メイク' %>整形メイク
    <%= f.check_box :genre_cont_any, { multiple: true }, 'イベントメイク' %>イベントメイク
    <%= f.check_box :genre_cont_any, { multiple: true }, 'パーソナルカラー診断' %>パーソナルカラー診断
    <%= f.check_box :genre_cont_any, { multiple: true }, '韓国メイク' %>韓国メイク
    <br>
    <%= f.submit '検索' %>
  <% end %>
</div>
