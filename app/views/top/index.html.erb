<% if user_signed_in? %>
  <table class="new_counselings">
    <tr class="tr_image">
      <% @influencers.first(5).each do |influencer| %>
        <td><%= image_tag influencer.influencer_image.variant(resize:'100x100') %></td>
      <% end %>
    </tr>
    <tr class="tr_title">
      <% @influencers.first(5).each do |influencer| %>
        <td>
          <%= influencer.name %>
          <span class="star-rating">
            <span class="star-rating-front" style="width: <%= influencer.avg_score * 20 %>%">★★★★★</span>
            <span class="star-rating-back">★★★★★</span>
          </span>
        </td>
      <% end %>
    </tr>
    <tr class="tr_date">
      <% @influencers.first(5).each do |influencer| %>
        <td><%= influencer.profile %></td>
      <% end %>
    </tr>
    <tr class="tr_button">
      <% @influencers.first(5).each do |influencer| %>
        <td><%= link_to "もっと見る", influencer_path(influencer) %></td>
      <% end %>
    </tr>
  </table>
<% else %>
  <%= image_tag '25154806_s.jpg', size:'1000x500', alt: "コスメ", class: "service_explanation_image" %>
  <h1 id="service_explanation_cap">「貴重な体験を気軽に」</h1>
  <p id="service_explanation_text">SNSを通じて、たくさんのインフルエンサーが情報を発信している時代。<br>
    多くのフォロワーを抱えているインフルエンサーと直接つながることは難しくなりました。<br>
    meseling（ミセリング）は、インフルエンサー本人が開催するカウンセリングに参加できるオンラインサービスです。<br>
    憧れのインフルエンサーに質問したり、アドバイスをもらったり「貴重な体験を気軽にできる」を叶えました。</p>
  <%= link_to "今すぐはじめる", new_user_registration_path, class:"new_user_registration_inservice_explanation" %>
  <%= link_to "アカウントをお持ちの方", new_user_session_path, class:"new_user_session_service_explanation" %>
<% end %>
<h2 id="top_searchforcounselig">カウンセリングを探す</h2>
<table class="counselings">
  <tr>
    <% @counselings.first(5).each do |counseling| %>
      <th><%= image_tag '25307560_s.jpg', size:'200x150' %></th>
    <% end %>    
  </tr>
  <tr>
    <% @counselings.first(5).each do |counseling| %>
      <td><%= counseling.name %></td>
    <% end %>
  </tr>
  <tr>
    <% @counselings.first(5).each do |counseling| %>
      <td><%= l counseling.day, format: :long %>  <%= l counseling.starttime, format: :short %>〜</td>
    <% end %>
  </tr>
  <tr>
    <% @influencers.first(5).each do |influencer| %>
      <td><span class="star-rating">
          <span class="star-rating-front" style="width: <%= influencer.avg_score * 20 %>%">★★★★★</span>
          <span class="star-rating-back">★★★★★</span>
          </span>
          （<%= influencer.reviews.count %>）
      </td>
    <% end %>
  </tr>
  <tr>
    <% @influencers.first(5).each do |influencer| %>
      <td><%= image_tag influencer.influencer_image, size:'50x30' %>  <%= influencer.name %></td>
    <% end %>
  </tr>
  <tr>
    <% @counselings.first(5).each do |counseling| %>
      <td><%= link_to "予約する", counseling_path(counseling), class:"link" %></td>
    <% end %>
  </tr>
</table>
<% if user_signed_in? %>
<% else %>
  <div id="service_explanation_bottom">
    <p id="service_explanation_text_bottom">WEBサービスの説明テキストが入ります</p>
      <div id="service_explanation_links">
        <%= link_to "さっそくはじめる", new_user_registration_path, class:"link" %>
      </div>
  </div>
<% end %>
