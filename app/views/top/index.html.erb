<div id="service_explanation">
  <p id="service_explanation_text">WEBサービスの説明テキストが入ります</p>
    <div id="service_explanation_links">
      <%= link_to "今すぐはじめる", new_user_registration_path, class:"link" %>
      <%= link_to "アカウントをお持ちの方", new_user_session_path, class:"link" %>
    </div>
</div>
<div id="new_counseling_index">
  <table class="new_counselings">
    <tr class="tr_image">
      <% @counselings.first(5).each do |counseling| %>
        <td><%= image_tag '25307560_s.jpg', size:'100x100' %></td>
      <% end %>    
    </tr>
    <tr class="tr_title">
      <% @counselings.first(5).each do |counseling| %>
        <td><%= counseling.name %></td>
      <% end %>
    </tr>
    <tr class="tr_date">
      <% @counselings.first(5).each do |counseling| %>
        <td><%= l counseling.day, format: :long %></td>
      <% end %>
    </tr>
    <tr class="tr_date">
      <% @counselings.first(5).each do |counseling| %>
        <td><%= l counseling.starttime, format: :short %>〜</td>
      <% end %>
    </tr>
    <tr class="tr_people">
      <% @counselings.first(5).each do |counseling| %>
        <td><%= counseling.people %></td>
      <% end %>
    </tr>
    <tr class="tr_button">
      <% @counselings.first(5).each do |counseling| %>
        <td><%= link_to "予約する", new_user_registration_path, class:"link" %></td>
      <% end %>
    </tr>
  </table>
</div>
<div id="service_explanation_bottom">
  <p id="service_explanation_text_bottom">WEBサービスの説明テキストが入ります</p>
    <div id="service_explanation_links">
      <%= link_to "さっそくはじめる", new_user_registration_path, class:"link" %>
    </div>
</div>
