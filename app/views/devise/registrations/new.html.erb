<div id="sign_up">
  <h2 class="cap">新規登録</h2>
  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.text_field :name, :placeholder =>"ユーザー名", autofocus: true, class:"user_field" %>
    </div>
    </br>
    <div class="field">
      <%= f.email_field :email, :placeholder =>"メールアドレス", autofocus: true, autocomplete: "email", class:"user_field" %>
    </div>
    </br>
    <div class="field">
      <%= f.password_field :password, :placeholder =>"パスワード(6文字以上)", autocomplete: "new-password", class:"user_field" %>
    </div>
    <br>
    <div class="field">
      <%= f.password_field :password_confirmation, :placeholder =>"パスワード(確認用)", autocomplete: "new-password", class:"user_field" %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "登録する", class:"registration_button" %>
    </div>
  <% end %>
  <div class="login_actions">
    <%= render "devise/shared/links" %>
  </div>
</div>
