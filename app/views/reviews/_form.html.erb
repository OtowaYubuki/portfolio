<p class="is-size-4 mb-3">レビューを投稿する</p>

<div class="rating-box mt-3">
  <%= form_with model: review, url: influencer_reviews_path(influencer), local: true do |f| %>
    <div class="main-rating">
      <div class="ratings mb-3">
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
      </div>
      <div class="ml-3 rating-value-display"><span id="rating-value-display">0</span>/5</div>
    </div>
    <%= f.hidden_field :influencer_id, value: influencer.id %>
    <%= f.hidden_field :score, id: "rating-value" %>
    <%= f.text_field :content, class: "textarea" %>
    <%= f.submit "レビューを投稿する", "button mt-3" %>
    <%= link_to "他のレビューを見る", influencer_reviews_path(influencer), class: "button light ml3 mt-3" %>
  <% end %>
</div>
